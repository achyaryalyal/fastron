# the zone that limit max 5 requests/sec from 1 single IP address and hold up to 10 MB of data
limit_req_zone $binary_remote_addr zone=data:10m rate=5r/s;

server {
    # server with [data].
    listen 80;
    access_log off;
    root /var/www/phpmyadmin;
    index index.php;
    charset utf-8;
    server_name data.smarttukang.com;
    location / {
        # limit zone request with a burst of 50
	limit_req zone=data burst=50 nodelay;
        try_files $uri $uri/ /index.php?$args;
        include security.rules;
    }
    include php.conf;
    include cache.conf;
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/phpmyadmin;
        try_files $uri /$1;
    }
    location = /.well-known/acme-challenge/ {
        return 404;
    }
}
