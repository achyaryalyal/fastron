# the zone that limit max 5 requests/sec from 1 single IP address and hold up to 10 MB of data
limit_req_zone $binary_remote_addr zone=main:10m rate=5r/s;

server {
    # server with [www].
    listen 127.0.0.1;
    listen 80;
    listen [::]:80 ipv6only=on;
    root /var/www/main;
    index index.php;
    charset utf-8;
    server_name www.smarttukang.com;
    location / {
        # limit zone request with a burst of 50
	limit_req zone=main burst=50 nodelay;
        try_files $uri $uri/ =404;
        error_page 404 /404;
        error_page 406 /406;
        include security.rules;
        rewrite ^/(.*)/$ /$1 permanent;
        #####include /var/www/main/app/router.php;
    }
    include php.conf;
    include cache.conf;
    location = /robots.txt {
	      allow all;
	      log_not_found off;
	      access_log off;
    }
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/main;
        try_files $uri /$1;
    }
    location = /.well-known/acme-challenge/ {
        return 404;
    }
}
