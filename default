server {
    # server move non-www to www
    listen 80;
    listen 443;
    server_name smarttukang.com;
    # force https
    if ($scheme = http) { return 301 https://www.smarttukang.com$request_uri; }
    if ($scheme = https) { return 301 https://www.smarttukang.com$request_uri; }
}
server {
    # server with www
    listen 127.0.0.1;
    listen 80;
    listen [::]:80 ipv6only=on;
    listen 443 default_server ssl http2;
    root /var/www/main;
    index index.php;
    charset utf-8;
    server_name www.smarttukang.com;
    # force https
    if ($scheme = http) { return 301 https://www.smarttukang.com$request_uri; }

    ssl_certificate /etc/letsencrypt/live/smarttukang.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/smarttukang.com/privkey.pem;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDH+ECDSA+AESGCM:DH+AESGCM:ECDH+ECDSA+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!eNULL:!LOW:!EXPORT:!MD5:!DSS:!PSK:!SRP:!CAMELLIA:!RC4:!SEED;
    ssl_session_tickets on;
    ssl_dhparam /etc/nginx/dh.pem;
    ssl_buffer_size 16k;
    ssl_session_cache shared:SSL:30m;
    ssl_session_timeout 60m;
    #ssl_stapling on;
    #ssl_stapling_verify on;
    #ssl_trusted_certificate /etc/letsencrypt/live/smarttukang.com/fullchain.pem;
    #resolver 8.8.4.4 8.8.8.8 valid=300s;
    #resolver_timeout 10s;

    location / {
        try_files $uri $uri/ =404;
        error_page 404 /404;
        error_page 406 /406;
        include security.rules;
        rewrite ^/(.*)/$ /$1 permanent;
        include /etc/nginx/sites-available/opensimka/app/router.php;
    }

    include php.conf;
    include cache.conf;

    location = /robots.txt {
	      allow all;
	      log_not_found off;
	      access_log off;
    }
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/main;
        try_files $uri /$1;
    }
    location = /.well-known/acme-challenge/ {
        return 404;
    }
}
